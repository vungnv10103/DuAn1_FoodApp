<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_marginTop="8dp"
    android:layout_width="75dp"
    android:layout_marginStart="25dp"
    android:background="@drawable/background_category"
    android:elevation="3dp"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_item_cate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/cat_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNameItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pizza"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textColor="#6e6e70"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_item_cate"
        app:layout_constraintStart_toStartOf="@+id/img_item_cate"
        app:layout_constraintTop_toBottomOf="@+id/img_item_cate" />


</androidx.constraintlayout.widget.ConstraintLayout>