<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mediumGray"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activities.ChangePass_Setting_Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#FF5353"
        android:gravity="center"
        android:text="Đổi Mật Khẩu"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textColorHint="@color/white"
        app:passwordToggleTint="@color/white"
        app:passwordToggleEnabled="true">
        <EditText
            android:id="@+id/changePass_currentPass"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật Khẩu Hiện Tại"
            android:textColor="@color/white"
             />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        app:passwordToggleTint="@color/white"
        app:passwordToggleEnabled="true">
        <EditText
            android:id="@+id/changePass_newPass"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật Khẩu Mới"
            android:textColor="@color/white"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        app:passwordToggleTint="@color/white"
        app:passwordToggleEnabled="true">
        <EditText
            android:id="@+id/changePass_checkPass"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập lại mật Khẩu Mới"
            android:textColor="@color/white"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btn_ChangePass_setting"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XÁC NHẬN ĐỔI" />
</LinearLayout>