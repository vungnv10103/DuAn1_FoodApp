<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mediumGray"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activities.ChangePass_Setting_Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#FF5353"
        android:gravity="center"
        android:text="Đổi Mật Khẩu"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/changePass_currentPass"
        android:layout_width="349dp"
        android:layout_height="66dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:hint="Mật Khẩu Hiện Tại"
        android:textColor="@color/white"
        android:textColorHint="#A9FFFFFF" />

    <EditText
        android:id="@+id/changePass_newPass"
        android:layout_width="349dp"
        android:layout_height="66dp"
        android:layout_marginBottom="30dp"
        android:hint="Mật Khẩu Mới"
        android:textColor="@color/white"
        android:textColorHint="#A9FFFFFF" />

    <EditText
        android:id="@+id/changePass_checkPass"
        android:layout_width="349dp"
        android:layout_height="66dp"
        android:layout_marginBottom="50dp"
        android:hint="Xác Nhận Mật Khẩu Mới"
        android:textColor="@color/white"
        android:textColorHint="#A9FFFFFF" />

    <Button
        android:id="@+id/btn_ChangePass_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XÁC NHẬN ĐỔI" />
</LinearLayout>